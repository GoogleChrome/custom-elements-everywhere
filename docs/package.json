{
  "name": "custom-elements-everywhere",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ../out; mkdir -p ../out/styles; npm run build-html && npm run build-css",
    "build-html": "node index.js > ../out/index.html",
    "build-css": "cat ./styles/third_party/bulma.css ./styles/site.css | cleancss -o ../out/styles/bundle.css"
  },
  "author": "Rob Dodson",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "4.2.1",
    "handlebars": "4.0.12",
    "marked": "0.5.2"
  }
}
