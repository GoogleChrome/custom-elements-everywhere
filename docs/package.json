{
  "name": "custom-elements-everywhere",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-html && npm run build-css && npm run build-images",
    "build-html": "mkdir ../out; node index.js > ../out/index.html",
    "build-css": "mkdir -p ../out/styles; cat ./styles/third_party/bulma.css ./styles/site.css | cleancss -o ../out/styles/bundle.css",
    "build-images": "cp -r images ../out/images"
  },
  "author": "Rob Dodson",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "4.2.1",
    "handlebars": "4.0.12",
    "marked": "0.5.2"
  }
}
