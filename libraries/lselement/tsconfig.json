{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "allowUnreachableCode": false,
      "declaration": false,
      "experimentalDecorators": true,
      "lib": [
          "dom",
          "es2015"
      ],
      "outDir": "./src/dist-components",
      "moduleResolution": "node",
      "module": "esnext",
      "target": "es2017",
      "baseUrl": "./src/components",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "jsx": "react",
      "reactNamespace": "h"
  },
  "include": [
      "src"
  ],
  "exclude": [
      "node_modules"
  ]
}